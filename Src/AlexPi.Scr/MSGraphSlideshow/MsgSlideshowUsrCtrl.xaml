          <Button Content="STOP" x:Name="StopButton" Height="25" Width="50" Click="Stop_Clicked" />
          <Button Click="OnClose"   IsCancel="True"   >E_xit</Button>-->
        </StackPanel>
      </vlc:VideoView>
      
      <Label     x:Name="ReportTR" d:Content="2023-05-25&#10;adfsaf" VerticalAlignment="Top"    HorizontalAlignment="Right" Background="#3333" HorizontalContentAlignment="Right" Foreground="#f8f" />
      <TextBlock x:Name="ReportTL" d:Text="Abc efg 12323" VerticalAlignment="Top"    HorizontalAlignment="Left"  Background="#3333" />
      <TextBlock x:Name="ReportBL" d:Text="Abc efg 12323" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Background="#3333" />
      <TextBlock x:Name="ReportBR" d:Text="Abc efg 12323" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#3333" />
    </Grid>

    <TextBlock   x:Name="ReportBC" d:Text="12323" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#3333" />
    <ProgressBar x:Name="progressBar" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500" Value="33" BorderThickness="0" Height="5" Margin="0" Foreground="#0d0" Background="#808" />
    <Anime:ArcPi x:Name="progressArc" Width="80" Height="80" Radiu="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8 60" Color="#0d0" Bckgr="#808" />

    <CheckBox    Content="_On"   IsChecked="True" x:Name="chkIsOn" HorizontalAlignment="Left"   VerticalAlignment="Center" />
    <Button      Content="_Next" IsDefault="True"  Click="OnNext"  HorizontalAlignment="Center" VerticalAlignment="Top" />

