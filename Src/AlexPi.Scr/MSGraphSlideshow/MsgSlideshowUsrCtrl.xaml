<UserControl x:Class="MSGraphSlideshow.MsgSlideshowUsrCtrl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
             xmlns:local="clr-namespace:MSGraphSlideshow"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent" Loaded="OnLoaded">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image         Grid.Row="2"                  x:Name="Image1" />
    <Image         Grid.Row="0" Grid.RowSpan="4" x:Name="ImageView1" Source="https://ctlocalhub.com/wp-content/themes/directorytheme/images/Listing-Placeholder.png" />
    <vlc:VideoView Grid.Row="2" Grid.RowSpan="1" x:Name="VideoView1" Background="Transparent" Opacity=".5"/>

    <TextBlock x:Name="ReportTL"   d:Text="12323" Grid.RowSpan="4" FontSize="26" VerticalAlignment="Top"    HorizontalAlignment="Left"  Foreground="#ff0" Background="#8000" Padding="8 3 8 5" />
    <TextBlock x:Name="ReportTR"   d:Text="12323" Grid.RowSpan="4" FontSize="26" VerticalAlignment="Top"    HorizontalAlignment="Right" Foreground="#ff0" Background="#8000" Padding="8 3 8 5" />
    <TextBlock x:Name="ReportBL"   d:Text="12323" Grid.RowSpan="4" FontSize="26" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Foreground="#ff0" Background="#8000" Padding="8 3 8 5" />
    <TextBlock x:Name="ReportBR"   d:Text="12323" Grid.RowSpan="4" FontSize="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="#ff0" Background="#8000" Padding="8 3 8 5" />

    <TextBlock x:Name="ReportTC" d:Text="12323" Grid.Row="0"     FontSize="20" Margin="8 0" HorizontalAlignment="Center" Foreground="#ff0" Padding="5" Background="#8111" />
    <TextBlock x:Name="ReportBC" d:Text="12323" Grid.RowSpan="4" FontSize="16" Margin="8 8" HorizontalAlignment="Center" Foreground="#f88" Padding="5" Background="#8111" VerticalAlignment="Bottom" />
    
    <Button Grid.Row="3" IsDefault="True" Click="OnNext"  Content="_Next" HorizontalAlignment="Center" />
    
  </Grid>
</UserControl>