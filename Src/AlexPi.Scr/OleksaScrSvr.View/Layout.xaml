<UserControl x:Class="OleksaScrSvr.View.Layout" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             xmlns:local="clr-namespace:OleksaScrSvr.View" 
             xmlns:viewmodels="clr-namespace:OleksaScrSvr.VM.VMs;assembly=OleksaScrSvr.VM" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LayoutVM}" 
             d:DesignHeight="250" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <local:NavigationBar  Grid.Row="0" DataContext="{Binding NavBarVM}" />

    <ContentControl       Grid.Row="1" Content="{Binding ContentVM}" Padding="8" Background="#0f0" />

  </Grid>
</UserControl> 