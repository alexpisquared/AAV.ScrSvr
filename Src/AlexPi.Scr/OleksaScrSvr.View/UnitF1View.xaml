    <MSGraphSlideshow:MsgSlideshowUsrCtrl x:Name="MsgSlideshowUsrCtrl1" ClientId="{Binding ElementName=wnd, Path=ClientId}" Margin="0" />

    <Rectangle MouseLeftButtonDown="Rectng_MouseLeftButtonDown" MouseLeftButtonUp="Rectng_MouseLeftButtonUp" MouseMove="Rectng_MouseMove" Width="80" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Cursor="SizeNWSE" Fill="#730" />
    <Menu VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="52" Background="#730" Foreground="#888">
      <MenuItem Header="  _Is On  " IsCheckable="True" IsChecked="{Binding ElementName=wnd, Path=WindowState}" Width="210" Height="80" />
    </Menu>
  </Grid>
</lnk:UnitContainerBase>
