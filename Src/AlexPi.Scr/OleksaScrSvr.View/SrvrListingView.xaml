<UserControl x:Class="OleksaScrSvr.Views.SrvrListingView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:viewmodels="clr-namespace:OleksaScrSvr.VM.VMs;assembly=OleksaScrSvr.VM" d:DataContext="{d:DesignInstance Type=viewmodels:SrvrListingVM}"
             d:DesignHeight="250" d:DesignWidth="800" >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <TextBlock FontSize="28" Text="Srvr" />
      <Button   Margin="10 0 0 0"   Padding="10 5"   VerticalAlignment="Center"   Command="{Binding AddSrvrCommand}"   Content="_Add Srvr" />
    </StackPanel>
    <ListView  Grid.Row="1"  Margin="0 20 0 0"  ItemsSource="{Binding Srvr}">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding Srvr}" Header="Srvr" />
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</UserControl> 