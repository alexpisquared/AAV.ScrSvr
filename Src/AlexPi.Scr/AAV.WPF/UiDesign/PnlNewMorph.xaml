<UserControl x:Class="AAV.WPF.UiDesign.PnlNewMorph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AAV.WPF.UiDesign"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
  <Grid x:Name="pnlNeuMorph" >
    <Grid.Resources>
      <Style TargetType="Border">
        <Setter Property="CornerRadius"     Value="6"/>
        <Setter Property="Padding"          Value="5"/>
        <Setter Property="Background"       Value="{StaticResource BackBackgroundBrush}" />
        <Setter Property="Opacity"          Value=".6" />
      </Style>
    </Grid.Resources>
    <Border>
      <Border.Effect>
        <DropShadowEffect ShadowDepth="2" Color="#000" BlurRadius="6" Direction="300" />
      </Border.Effect>
    </Border>
    <Border>
      <Border.Effect>
        <DropShadowEffect ShadowDepth="3" Color="#fff" BlurRadius="6" Direction="120" />
      </Border.Effect>
    </Border>
    <Border x:Name="pnlThemeColor" Opacity="1" />
  </Grid>
</UserControl>
