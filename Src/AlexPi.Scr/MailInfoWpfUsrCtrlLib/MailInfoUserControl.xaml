<UserControl x:Class="MailInfoWpfUsrCtrlLib.MailInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailInfoWpfUsrCtrlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Rectangle Grid.Row="0" Fill="#03e" />
    <Rectangle Grid.Row="1" Fill="#fd0" />
    <Viewbox   Grid.RowSpan="2" >
      <TextBlock Text="Mail is under construction... &#10;           ...until the key store is online." />
    </Viewbox>
  </Grid>
</UserControl>
